# UBI Compass Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Google AI APIs Configuration
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Enable both Translation API and Natural Language API
GOOGLE_TRANSLATE_API_KEY=your_google_api_key_here

# Database Configuration (Optional - can use Vercel Postgres)
# If using external PostgreSQL database
DATABASE_URL=postgresql://username:password@host:port/database
DB_USER=postgres
DB_PASSWORD=your_secure_password

# Production Domain
QWIK_PUBLIC_DOMAIN=https://ubicompass.info

# Node Environment
NODE_ENV=production

# Optional: Analytics and Monitoring
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# SENTRY_DSN=your_sentry_dsn_here

# Security Settings
# SESSION_SECRET=your_random_session_secret_here
